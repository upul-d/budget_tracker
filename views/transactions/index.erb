<h1>All Transactions</h1>

<h3>Total spent: £<%= @total %></h3>

<h4>Click tag to view expenditure by tag:
 <ul>
  <% @tags.each do |tag| %>
   <li><a href="/transactions/bytag/<%= tag.tag_id %>"><%= tag.name %></a></li>
   <% end %>
 </ul>
</h4>

<h4>View/edit transactions:</h4>
<% @transactions.each do |transaction| %>
  <p>Merchant: <%= transaction.merchant.name %></p>
  <p>Tag: <%= transaction.tag.name %></p>
  <p><b>Amount: £<%= transaction.amount %></b></p>
  <form>
  <input type="button" value="Edit Transaction" onclick="window.location.href='/transactions/edit/<%= transaction.transaction_id %>'" />
  </form>
  <hr>
  <% end %>


  

